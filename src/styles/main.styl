@import '../../bower_components/normalize.styl/normalize.styl'
@import 'siteswap_icons.styl'
@import 'shadowsintolight_font.styl'
@import 'mixins/mixins.styl'
/*
orangeColor = #ff8000
grayColor   = #474747
*/

article = {
	margin: .5em
}

body = {
	font: {
		size: 22px
	}
}

button = {
	create: {
		width: 300px
		height: 60px
	}
}

color = {
	main: #2F9C9A
}

num_samples = 2

body
	//font-family: 'Sans Serif'
	font-family: 'Josefin Sans', sans-serif;
	font-size: body.font.size
	margin: 0
	padding: 0
ul
li
	list-style: none
	margin: 0
	padding: 0

.content
	width: 100%
.form
	font-size: 1.4em
	padding: 1em 0
	h2
		//border-bottom: solid 1px color.main
		display: inline-block
		font-size: 1em
		margin: 0
		text-transform: capitalize
		&:after
			content: ":"
	.editable
		border: solid 1px #ccc
		border-radius: .2em
		//box-shadow: 2px 2px 8px #ccc
		display: inline-block
		padding: .2em .2em 0
	.patterns-description
		h2
			display: block
	.fieldset
		margin: 1em
.header
	height: 170%
	height: 100vh
	background: color.main
	color: white
	margin: 0 auto
	text-align: center
	.icon-logo
		vertical-align middle
		display inline-block
		font-size 3.3em
		margin 0
		margin-right .1em
	
.header-btn
	background: white
	border-radius: .2em
	color: black
	display: inline-block
	height: 2em
	line-height: 2em
	padding 0 .5em
	text-decoration: none
.header-main
	font-size 1.3em
	padding: 1em 0
	h1
		font-size: 2.5em
		margin: 0
		padding: 0
	strong
		font-weight: normal
	.description
		margin .2 0
.hide
	display: none
.languages
	font-size: 0.7em
	padding: 3em 0 1.5em
	ul
		margin 0
		padding 0
	li
		display: inline-block
		border-left: solid white 1px
		&:first-child
			border: none
	a
		color: white
		display: block
		padding 0 .5em
		text-decoration: none
.keyboard
	background: color.main
	bottom: 0
	height: 50px
	line-height: 50px
	//overflow: hidden
	position: fixed
	text-align: left
	transition: height .3s
	width: 100%
	.slow
		background: color.main
		width 200%
	.fast
		width 100%
		transition: margin-left .3s, width .3s
	li
		background: white
		display: inline-block
		height: 30px
		line-height: 30px
		margin: 0 .5em
		padding: 0 .5em
	&.hide
		display: block
		height: 0
.patterns
	//margin-top 2em
	text-align justify
.create
	border: none
	background: transparent
	box-shadow: none
	padding: 0 0 .5em
	button
		display: block
		width: 80%
		height: button.create.height + 8px
		margin: 0 auto
		font-size: 1.5em
		line-height: button.create.height
.samples
	overflow: hidden
	ul
		font-size: 0
		margin: 0
		padding: 0
		width: num_samples * 100%
	li
		display: inline-block
		font-size: body.font.size
		vertical-align: top
		width: (100% / num_samples)
	p
		margin: 0
		padding: 0
.select
	background: #ECA350
.title
	font-family: 'Shadows Into Light', cursive;
#patterns
	ul
		margin 0
		padding 0
	li
		display: inline-block
		list-style-type: none
		padding: .5em
		margin: .2em
		border-radius: 3px
		background: rgba(color.main, 0.2)
.wrapper
	//margin-top: .5em
		
@media screen and (min-width: 350px)
	.patterns
	.dashboard
		margin: 0 auto
		width: 350px
@media screen and (min-width: 800px)
	fieldset
		margin: 1em 0
		padding: .8em .8em
	.dashboard
	.patterns
	.simulator
		display: inline-block
		vertical-align: top
	.dashboard
		margin-right: 1em
	.patterns
		margin-left: 1em
		margin-top: 1em
		
