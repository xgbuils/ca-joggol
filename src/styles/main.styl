@import '../../bower_components/normalize.styl/normalize.styl'
@import 'siteswap_icons.styl'
@import 'shadowsintolight_font.styl'
@import 'mixins/mixins.styl'
/*
orangeColor = #ff8000
grayColor   = #474747
*/

article = {
	margin: .5em
}

body = {
	font: {
		size: 18px
	}
}

button = {
	create: {
		width: 300px
		height: 60px
	}
}

color = {
	'red': #CF4646
}



body
	font-family: 'Sans Serif'
	font-size: body.font.size
	margin: 0
	padding: 0
	overflow: hidden
fieldset
	background: rgba(color.red, 0.2);
	padding .5em .2em
	margin .5em 0
	border solid 1px #c0c0c0
	border-radius 3px
	div
		display inline-block
legend
	display: block
	padding: 0.3em 0.6em
	border-radius: .4em
	text-transform: capitalize
	border: solid 1px #c0c0c0
	background: white
header
	background: color.red
	color: white
	padding: .5em 0
	box-shadow: rgba(color.red, 0.2) 2px 2px 2px 2px
	.icon-logo
		vertical-align middle
		display inline-block
		font-size 50px
	h1
		display inline-block
		vertical-align middle
		margin 0
		padding 0
		//padding-left .5em
		font-size 1.7em
		font-family: 'Shadows Into Light', cursive;
		

input
	width: 64px;
.content
.header
	margin: 0 auto
.content
	width: 100%
	text-align: center
	//overflow hidden
	font-size: 0
.dashboard
.description
.patterns
	width: 100%
	display: inline-block
	vertical-align: top
	text-align: left
	font-size: body.font.size
.description
	show false
@media screen and (min-width: 350px)
	.header
	.patterns
	.dashboard
		width 350px
@media screen and (min-width: 500px)
	.header
	.content
		width 90%
	.dashboard
		width: 100%
		text-align: justify
		fieldset
			width: 30%
			display: inline-block
			text-align: left
			label
				display inline-block
				width 2.3em
		.message
			width: 100%
			box-sizing: border-box
		.create
			width: 100%
			input
				width: button.create.width
	.patterns
		width 100%
@media screen and (min-width: 800px)
	article
		margin: article.margin
	.content
		margin: 0 auto
		padding: 0
		text-align: justify
	.dashboard
		width: 60%
		margin-top: 1em
	.create
		position: absolute
		left: 50%
		margin-left: -50%
	.description
		show true
		width: 25%
	.patterns
		margin-top: button.create.height + 3 * article.margin * body.font.size
		width: 40%
		//padding: 0 5%
@media screen and (min-width: 1000px)
	.header
	.content
		width 1000px
	.description
		width 33%
	.patterns
		padding 0 0%
.hide
	display: none;
.patterns
	//margin-top 2em
	text-align justify
.create
	border: none
	background: transparent
	box-shadow: none
	input
		display: block
		width: 80%
		height: button.create.height
		margin: 0 auto
		//padding .5em
		font-size: 1.5em
		line-height: button.create.height
.title
	font-family: 'Shadows Into Light', cursive;
#patterns
	ul
		margin 0
		padding 0
	li
		display: inline-block
		list-style-type: none
		padding: .5em
		margin: .2em
		border-radius: 3px
		background: rgba(color.red, 0.2)
.wrapper
	//margin-top: .5em
